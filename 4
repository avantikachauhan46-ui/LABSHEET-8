#include <iostream>
using namespace std;

void copyString(char src[], char dest[]) {
    int i = 0;
    while (src[i] != '\0') {
        dest[i] = src[i];
        i++;
    }
    dest[i] = '\0';
}

int main() {
    char str1[100], str2[100];
    cout << "Enter a string: ";
    cin.getline(str1, 100);

    copyString(str1, str2);

    cout << "Copied string: " << str2;
    return 0;
}
