#include <iostream>
using namespace std;

class Person {
protected:
    string name;
    int age;

public:
    void getData() {
        cout << "Enter name: ";
        cin >> name;
        cout << "Enter age: ";
        cin >> age;
    }

    void displayData() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }
};

class Student : public Person {
    float marks;

public:
    void getMarks() {
        cout << "Enter marks: ";
        cin >> marks;
    }

    void displayStudent() {
        displayData();
        cout << "Marks: " << marks << endl;
    }
};

int main() {
    Student s;
    s.getData();
    s.getMarks();
    s.displayStudent();
    return 0;
}
