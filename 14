#include <iostream>
using namespace std;

class Calculator {
public:
    int add(int a, int b) {
        return a + b;
    }

    double add(double a, double b) {
        return a + b;
    }

    int add(int a, int b, int c) {
        return a + b + c;
    }
};

int main() {
    Calculator calc;
    cout << "Sum of integers: " << calc.add(5, 3) << endl;
    cout << "Sum of doubles: " << calc.add(2.5, 3.8) << endl;
    cout << "Sum of three numbers: " << calc.add(1, 2, 3) << endl;
    return 0;
}
